include rating-mixin

mixin timetablePanel(openingHours)
    .panel.panel-primary
        .panel-heading
            h2.panel-title Opening hours
        .panel-body
            each openingHour in openingHours
                p #{openingHour}

mixin facilitiesPanel(facilities)
    .panel.panel-primary
        .panel-heading
            h2.panel-title Facilities
        .panel-body
            each facility in facilities
                span.label.label-warning
                    span.glyphicon.glyphicon-ok
                    | &nbsp;#{facility}
                | &nbsp;

mixin locationPanel(lat,lng)
    .panel.panel-primary
        .panel-heading
            h2.panel-title Location map
        .panel-body
            img.img-responsive.img-rounded(src="http://maps.googleapis.com/maps/api/staticmap?center=#{lat},#{lng}&zoom=13&scale=false&size=400x350&maptype=roadmap&format=png&visual_refresh=true")

mixin review(review)
    .row
        .review
            .well.well-sm.review-header
                span.rating
                    +rating(review.rating)
                span.reviewAuthor #{review.author}
                small.reviewTimestamp #{review.timestamp}
            .col-xs-12
                p #{review.comment}

mixin reviews(reviews)
    .panel-body.review-container
        each review in reviews
            +review(review)