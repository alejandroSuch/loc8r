include rating-mixin

mixin location(location)
    .col-xs-12.list-group-item
        h4
            a(href='/location') #{location.name}&nbsp;&nbsp;
            + rating(location.rating)
            span.badge.pull-right.badge-default #{location.distance}
        p.address #{location.address}
        p
            - for(var i = 0; i < location.facilities.length; i++)
                span.label.label-warning #{location.facilities[i]}
                | &nbsp;